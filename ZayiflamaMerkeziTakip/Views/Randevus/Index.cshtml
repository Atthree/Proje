@model IEnumerable<ZayiflamaMerkeziTakip.Models.Randevu>

@{
    ViewData["Title"] = "Index";
}

<h1>Randevular</h1>

<p>
    <a asp-action="Create">Randevu Oluştur</a>
</p>
<table class="table table-bordered table-striped" id="list">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RandevuTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uzmanlik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doktor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hasta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RandevuTarihi)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Uzmanlik.Uzmanlik1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doktor.İsim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hasta.Isim)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.RandevuId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.RandevuId">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.RandevuId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#list').DataTable({

        });
    });
</script>
