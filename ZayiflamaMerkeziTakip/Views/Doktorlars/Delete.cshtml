@model ZayiflamaMerkeziTakip.Models.Doktorlar

@{
    ViewData["Title"] = "Delete";
}

<h3>Silmek İstediğinize Emin misiniz?</h3>
<div>
    <h4>Doktorlar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.Photo)" alt="Doktor Fotoğrafı" class="img-fluid" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.İsim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.İsim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Soyisim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Soyisim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelefonNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefonNo)
        </dd>      
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uzmanlik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uzmanlik.Uzmanlik1)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DoktorId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri Dön</a>
    </form>
</div>
