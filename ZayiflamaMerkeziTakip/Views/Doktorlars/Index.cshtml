@model IEnumerable<ZayiflamaMerkeziTakip.Models.Doktorlar>

@{
    ViewData["Title"] = "Index";
}

<h1>Doktorlar</h1>

<p>
    <a asp-action="Create">Oluştur</a>
</p>
<table class="table table-bordered table-striped" id="list">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.İsim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyisim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uzmanlik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.Photo" widht="50" height="70"/>
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.İsim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyisim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uzmanlik.Uzmanlik1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DoktorId">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.DoktorId">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.DoktorId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
