@model ZayiflamaMerkeziTakip.Models.HastaTedavileri

@{
    ViewData["Title"] = "Create";
}


<h4>HastaTedavileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Hasta</label>
                <select asp-for="HastaId" class="form-control" asp-items="ViewBag.HastaId"></select>
            </div>
            <div class="form-group">
                <label>Tedavi</label>
                <select asp-for="TedaviId" class="form-control" asp-items="ViewBag.TedaviId"></select>
            </div>
            <div class="form-group">
                <label>Başlangıç Tarihi</label>
                <input asp-for="BaslangicTarihi" class="form-control" />
                <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Bitiş Tarihi</label>
                <input asp-for="BitisTarihi" class="form-control" />
                <span asp-validation-for="BitisTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notlar" class="control-label"></label>
                <input asp-for="Notlar" class="form-control" />
                <span asp-validation-for="Notlar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
