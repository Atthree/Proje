@model IEnumerable<ZayiflamaMerkeziTakip.Models.Hastalar>

@{
    ViewData["Title"] = "Hastalar";
}

<h1>Hastalar</h1>
<p>
    <a asp-action="Create">Yeni Kayıt Oluştur</a>
</p>
<table class="table table-bordered table-striped" id="list">
    <thead>
        <tr>
            <th>
                Fotoğraf
            </th>
            <th>
                İsim
            </th>
            <th>
                Soyisim
            </th>
            <th>
                Doğum Tarihi
            </th>
            <th>
                Cinsiyet
            </th>
            <th>
                Telefon
            </th>
            <th>
                Kayıt Tarihi
            </th>
            <th>
                Tedavi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Photo" widht="50" height="70" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyisim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DogumTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cinsiyet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefonNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KayitTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tedavi.TedaviAdi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HastaId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.HastaId">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.HastaId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#list').DataTable({

        });
    });
</script>
